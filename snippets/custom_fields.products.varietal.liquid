{% if product.metafields.custom_fields["varietal"] != blank %}
  <div class="custom-field custom-field__varietal custom-field__type--field-collection-json">
    <h3 class="custom-field--title">Varietal</h3>
    <div class="custom-field--value">
      {% for item in product.metafields.custom_fields["varietal"] %}
        <div class="fc-item fc-index--{{ forloop.index0 }}">
           {% if item["varietal"] != blank %}
             <div class="fc-field field__varietal field-type--text">
               <h4 class="custom-field--title">Varietal</h4>
               <div class="custom-field--value">
                 {{ item["varietal"] }}
               </div>
             </div>
           {% endif %}
         </div>
       {% endfor %}
    </div>
  </div>
{% endif %}
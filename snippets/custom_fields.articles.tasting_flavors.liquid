{% if article.metafields.custom_fields["tasting_flavors"] != blank %}
  <div class="custom-field custom-field__tasting-flavors custom-field__type--field-collection-json">
    <h3 class="custom-field--title">Tasting Flavors</h3>
    <div class="custom-field--value">
      {% for item in article.metafields.custom_fields["tasting_flavors"] %}
        <div class="fc-item fc-index--{{ forloop.index0 }}">
           {% if item["flavor"] != blank %}
             <div class="fc-field field__flavor field-type--text">
               <h4 class="custom-field--title">Flavor</h4>
               <div class="custom-field--value">
                 {{ item["flavor"] }}
               </div>
             </div>
           {% endif %}
         </div>
       {% endfor %}
    </div>
  </div>
{% endif %}
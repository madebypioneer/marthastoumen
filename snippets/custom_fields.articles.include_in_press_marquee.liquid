{% if article.metafields.custom_fields["include_in_press_marquee"] != blank %}
  <div class="custom-field custom-field__include-in-press-marquee custom-field__type--checkbox">
    <h3 class="custom-field--title">Include In Press Marquee</h3>
    <div class="custom-field--value">
      {% if article.metafields.custom_fields["include_in_press_marquee"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}
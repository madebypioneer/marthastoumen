{{ 'section-press-marquee.css' | asset_url | stylesheet_tag }}

<div class="bg-earth py-48 overflow-x-hidden press-marquee">
    <div class="flex animate-marquee relative items-center">
        {%- for press in blogs.news.articles -%}
            <div class="text-fullMoon p-32 text-center" style="min-width: 360px; max-width: 360px;">
                <div class="text-mono">
                    {{ press.content }}
                </div>
                {% if press.metafields.custom_fields.light_logo %}
                    <img src="{{ press.metafields.custom_fields.light_logo }}" alt="" class="pt-32" style="max-height: 60px; width: auto; max-width: 400px; margin: auto;">
                {% endif %}
            </div>
        {%- endfor -%}
        {%- for press in blogs.news.articles -%}
            <div class="text-fullMoon p-32 text-center" style="min-width: 360px;">
                {{ press.content }}
                {% if press.metafields.custom_fields.light_logo %}
                    <img src="{{ press.metafields.custom_fields.light_logo }}" alt="" class="pt-32" style="max-height: 60px; width: auto; max-width: 400px; margin: auto;">
                {% endif %}
            </div>
        {%- endfor -%}
        {%- for press in blogs.news.articles -%}
            <div class="text-fullMoon p-32 text-center" style="min-width: 360px;">
                {{ press.content }}
                {% if press.metafields.custom_fields.light_logo %}
                    <img src="{{ press.metafields.custom_fields.light_logo }}" alt="" class="pt-32" style="max-height: 60px; width: auto; max-width: 400px; margin: auto;">
                {% endif %}
            </div>
        {%- endfor -%}
    </div>
</div>

{% schema %}
{
    "name": "Press Marquee",
    "presets": [
        {
            "name": "Press Marquee"
        }
    ]
}
{% endschema %}

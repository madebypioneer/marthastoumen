{{ 'section-content.css' | asset_url | stylesheet_tag }}

<div class="container mx-auto {% if section.settings.reduce_top_spacing and section.settings.reduce_bottom_spacing != true %}pb-64{% elsif section.settings.reduce_bottom_spacing %}pt-64{% elsif section.settings.reduce_spacing != true %}py-64{% endif %}">
    <div class="flex flex-wrap justify-center {% if section.settings.reduce_top_spacing %}px-32{% else %}p-32 md:p-64{% endif %}">
        {%- for block in section.blocks -%}
            {% case block.type %}
                {%- when 'buttons' -%}
                    <div class="w-full large text-center mt-48">
                        {% if block.settings.link_one_page %}
                            <a href="{{ block.settings.link_one_page }}" class="button button--primary mx-8">
                                {{ block.settings.link_one_text }}
                            </a>
                        {% endif %}
                        {% if block.settings.link_two_page %}
                            <a href="{{ block.settings.link_two_page }}" class="button button--primary button--filled mx-8">
                                {{ block.settings.link_two_text }}
                            </a>
                        {% endif %}
                    </div>
            {%- when 'heading' -%}
                    <div class="w-full large text-center">
                        <h2 class="h1">{{ block.settings.heading }}</h2>
                    </div>
                {%- when 'largeText' -%}
                    <div class="w-full pb-64 large text-center">
                        {{ block.settings.text }}
                        {% comment %}<h2>{% endcomment %}
                            {% comment %}{{ section.settings.heading }}{% endcomment %}
                        {% comment %}</h2>{% endcomment %}
                    </div>
                    {%- when 'card' -%}
                        <div class="{% if block.settings.layout == 'one_third' %}md:w-1/3{% else %}md:w-1/4{% endif %} p-32 py-64 text-center">
                            <div class="flex flex-wrap">
                                {%- if block.settings.image -%}
                                    <div class="w-full mb-40 justify-center">
                                        {% if block.settings.is_icon %}
                                            <img
                                                src="{{ block.settings.image | img_url: '533x' }}"
                                                width="{{ block.settings.image.width }}"
                                                height="{{ block.settings.image.height }}"
                                                style="max-width: 120px; height: auto; margin: auto;"
                                            >
                                        {% else %}
                                        <div class="aspect-w-1 aspect-h-1">
                                            <img
                                                src="{{ block.settings.image | img_url: '533x' }}"
                                                width="{{ block.settings.image.width }}"
                                                height="{{ block.settings.image.height }}"
                                            >
                                        </div>
                                        {% endif %}
                                    </div>
                                {%- endif -%}
                                <div class="w-full">
                                    <h4>{{ block.settings.heading }}</h4>
                                    {{ block.settings.content }}
                                </div>
                            </div>
                        </div>
            {%- endcase -%}
        {%- endfor -%}
    </div>
</div>


{% schema %}
{
    "name": "Content",
    "settings": [
        {
            "type": "checkbox",
            "id": "reduce_spacing",
            "label": "Reduce Top and Bottom Spacing"
        },
        {
            "type": "checkbox",
            "id": "reduce_top_spacing",
            "label": "Reduce Top Spacing"
        },
        {
            "type": "checkbox",
            "id": "reduce_bottom_spacing",
            "label": "Reduce Bottom Spacing"
        }
    ],
    "blocks": [
        {
            "type": "buttons",
            "name": "Buttons",
            "settings": [
                {
                    "type": "text",
                    "id": "link_one_text",
                    "label": "Link Text"
                },
                {
                    "type": "url",
                    "id": "link_one_page",
                    "label": "Page"
                },
                {
                    "type": "text",
                    "id": "link_two_text",
                    "label": "Link Text"
                },
                {
                    "type": "url",
                    "id": "link_two_page",
                    "label": "Page"
                }
            ]
        },
        {
            "type": "heading",
            "name": "Heading",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                }
            ]
        },
        {
            "type": "largeText",
            "name": "Large Text",
            "settings": [
                {
                    "type": "richtext",
                    "id": "text",
                    "label": "Text"
                }
            ]
        },
        {
            "type": "card",
            "name": "Card",
            "settings": [
                {
                    "type": "select",
                    "id": "layout",
                    "options": [
                        {
                            "value": "one_third",
                            "label": "Three Across"
                        },
                        {
                            "value": "one_quarter",
                            "label": "Four Across"
                        }
                    ],
                    "default": "one_quarter",
                    "label": "Number of Cards Across"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "checkbox",
                    "id": "is_icon",
                    "label": "Image is Icon"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Content"
        }
    ]
}
{% endschema %}

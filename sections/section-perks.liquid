{{ 'section-perks.css' | asset_url | stylesheet_tag }}

<div class="p-64 mx-auto w-11/12 pt-96">
    <div class="flex flex-wrap -mx-32">
        <div class="w-full md:w-1/3 p-32">
            {% if section.settings.preheading %}
              <h6 class="mb-0 uppercase">{{ section.settings.preheading }}</h6>
            {% endif %}
            {% if section.settings.heading %}
              <h2 class="mt-0">
                {{ section.settings.heading | escape }}
              </h2>
            {% endif %}
            {% if section.settings.content %}
                <div>{{ section.settings.content }}</div>
            {% endif %}
        </div>
        <div class="w-full md:w-2/3 p-32">
            <div class="flex flex-wrap -mx-32">
                {%- for block in section.blocks -%}
                <div class="w-full md:w-1/2 px-32">
                    <div class="flex items-center -mx-16">
                        {% if block.settings.image %}
                            <div class="w-full sm:w-1/4 md:w-1/2 p-16">
                                <img
                                    src="{{ block.settings.image | img_url: '533x' }}"
                                    width="{{ block.settings.image.width }}"
                                    height="{{ block.settings.image.height }}"
                                    style="height: auto; max-width: 180px; width: 100%;"
                                    class="md:m-auto"
                                >
                            </div>
                        {% endif %}
                        <div class="w-full sm:w-3/4 md:w-1/2 p-16">
                            <p class="italic">{{ block.settings.text }}</p>
                        </div>
                    </div>
                </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Text with Icon List",
    "settings": [
        {
            "type": "text",
            "id": "preheading",
            "label": "PreHeading"
        },{
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },{
            "type": "richtext",
            "id": "content",
            "label": "Content"
        }
    ],
    "blocks": [
        {
            "type": "icon",
            "name": "Icon Feature",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Text with Icon List",
            "blocks": [
                {
                    "type": "icon"
                }
            ]
        }
    ]
}
{% endschema %}
